<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>Dynotic — Holiday Break</title>

<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;500;600;700&display=swap" rel="stylesheet">

<style>
*{
  margin:0;
  padding:0;
  box-sizing:border-box;
  font-family:"Outfit",sans-serif;
}

body{
  min-height:100vh;
  background:
    radial-gradient(circle at 15% 20%, rgba(138,43,226,0.18), transparent 55%),
    radial-gradient(circle at 85% 80%, rgba(168,85,247,0.15), transparent 55%),
    #000;
  color:#fff;
  display:flex;
  align-items:center;
  justify-content:center;
  padding:32px;
}

/* MAIN CARD */
.wrapper{
  width:100%;
  max-width:980px;
  padding:84px 82px;
  border-radius:32px;
  background:linear-gradient(
    180deg,
    rgba(255,255,255,0.11),
    rgba(255,255,255,0.04)
  );
  backdrop-filter: blur(22px);
  border:1px solid rgba(255,255,255,0.18);
  box-shadow:
    0 0 60px rgba(168,85,247,0.32),
    inset 0 0 0 1px rgba(255,255,255,0.05);
  text-align:center;
  animation:cardIn .9s ease forwards;
  opacity:0;
  transform:translateY(28px);
}

@keyframes cardIn{
  to{opacity:1;transform:none;}
}

/* LOGO */
.logo{
  width:90px;
  margin:0 auto 26px;
  animation:float 4s ease-in-out infinite;
}
.logo img{
  width:100%;
  opacity:.95;
}

@keyframes float{
  0%,100%{transform:translateY(0)}
  50%{transform:translateY(-8px)}
}

/* TITLE */
h1{
  font-size:3.4rem;
  font-weight:700;
  letter-spacing:-0.01em;
  margin-bottom:14px;
}

h1 span{
  background:linear-gradient(
    90deg,
    rgba(168,85,247,1),
    rgba(138,43,226,1)
  );
  -webkit-background-clip:text;
  -webkit-text-fill-color:transparent;
}

/* DESCRIPTION */
.desc{
  max-width:520px;
  margin:0 auto 58px;
  font-size:1rem;
  line-height:1.7;
  opacity:.75;
  animation:fadeUp .9s ease .2s both;
}

@keyframes fadeUp{
  from{opacity:0;transform:translateY(12px)}
  to{opacity:.75;transform:none}
}

/* COUNTDOWN */
.countdown{
  display:flex;
  justify-content:center;
  gap:34px;
}

/* BOX */
.box{
  min-width:140px;
  padding:30px 18px;
  border-radius:22px;
  background:linear-gradient(
    180deg,
    rgba(255,255,255,0.12),
    rgba(255,255,255,0.05)
  );
  border:1px solid rgba(255,255,255,0.18);
  box-shadow:
    0 10px 40px rgba(0,0,0,0.45),
    inset 0 0 0 1px rgba(255,255,255,0.05);
  animation:zoomIn .7s ease both;
}

.box:nth-child(1){animation-delay:.2s}
.box:nth-child(2){animation-delay:.35s}
.box:nth-child(3){animation-delay:.5s}
.box:nth-child(4){animation-delay:.65s}

@keyframes zoomIn{
  from{opacity:0;transform:scale(.9)}
  to{opacity:1;transform:none}
}

/* NUMBER */
.box span{
  display:block;
  font-size:3.1rem;
  font-weight:700;
  line-height:1;
  color:#fff;
}

/* LABEL */
.box small{
  display:block;
  margin-top:10px;
  font-size:.72rem;
  letter-spacing:.22em;
  opacity:.6;
}

/* MOBILE */
@media(max-width:768px){
  body{padding:18px}
  .wrapper{
    padding:54px 26px;
    border-radius:26px;
  }
  .logo{
    width:64px;
    margin-bottom:18px;
  }
  h1{
    font-size:2.2rem;
  }
  .desc{
    font-size:.85rem;   /* diperkecil biar pas mobile */
    margin-bottom:40px;
  }
  .countdown{
    gap:14px;
    flex-wrap:wrap;
  }
  .box{
    min-width:82px;
    padding:18px 12px;
  }
  .box span{
    font-size:1.9rem;
  }
}
</style>
</head>

<body>

<!-- BACKGROUND MUSIC -->
<audio id="bg-music" src="../assets/mery.mp3" loop></audio>

<div class="wrapper">

  <!-- LOGO -->
  <div class="logo">
    <img src="../assets/natal.png" alt="Holiday">
  </div>

  <h1 id="title">Holiday <span>Break</span></h1>

  <p class="desc" id="desc">
    Dynotic is currently on a holiday break.<br>
    All services will resume on <strong>January 2nd</strong>.
  </p>

  <div class="countdown" id="countdown">
    <div class="box">
      <span id="days">0</span>
      <small>DAYS</small>
    </div>
    <div class="box">
      <span id="hours">0</span>
      <small>HOURS</small>
    </div>
    <div class="box">
      <span id="minutes">0</span>
      <small>MINUTES</small>
    </div>
    <div class="box">
      <span id="seconds">0</span>
      <small>SECONDS</small>
    </div>
  </div>
</div>

<script>
const target = new Date(new Date().getFullYear() + 1, 0, 2);
const audio = document.getElementById("bg-music");

window.addEventListener("load",()=>{
  audio.volume = 0.35;
  audio.play().catch(()=>{});
});
document.body.addEventListener("click",()=>{
  if(audio.paused){
    audio.volume = 0.35;
    audio.play();
  }
},{once:true});

function update(){
  const now = new Date();
  const diff = target - now;

  if(diff <= 0){
    title.innerHTML = "We’re <span>Back Online</span>";
    desc.textContent =
      "All Dynotic services are now running normally.";
    countdown.style.display="none";
    return;
  }

  days.textContent = Math.floor(diff / 86400000);
  hours.textContent = Math.floor(diff / 3600000) % 24;
  minutes.textContent = Math.floor(diff / 60000) % 60;
  seconds.textContent = Math.floor(diff / 1000) % 60;
}

setInterval(update,1000);
update();
</script>

</body>
</html>
